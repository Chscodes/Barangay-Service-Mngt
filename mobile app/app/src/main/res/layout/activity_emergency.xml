<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_req"
    tools:context=".emergency" >

    <RelativeLayout
        android:id="@+id/box1"
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:background="#f5f6fa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box2">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="106dp"
            android:layout_height="108dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            app:srcCompat="@drawable/folders" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView2"
            android:layout_marginStart="10sp"
            android:fontFamily="@font/lemonbold"
            android:text="Emergency Fill-Up Form"
            android:textColor="#192a56"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lblinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView9"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/fragmentcore"
            android:text="Please fill-Out the needed information given below for succcessful transaction"
            android:textColor="#2f3640"
            android:textSize="11sp" />

        <View
            android:id="@+id/dvd1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/lblinfo"
            android:layout_marginTop="5dp"
            android:background="#dcdde1" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/box2"
        android:layout_width="178dp"
        android:layout_height="23dp"
        android:background="@drawable/style_req"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnback_Request"
            android:layout_width="26dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5sp"
            app:srcCompat="@drawable/backbtn" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>