<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/lblcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/lemonreg"
        android:text="We send you a Verification \n code to your email:"
        android:textAlignment="center"
        android:textColor="#3d3d3d"
        android:textSize="19dp" />


    <TextView
        android:id="@+id/dialog_forgot_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblcode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15sp"
        android:fontFamily="@font/lemonlightalic"
        android:text="@string/thisisemail123_gmail_com"
        android:textAlignment="center"
        android:textColor="#3d3d3d"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_forgot_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/et_code1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/edittext_bg"
            android:hint="C"
            android:inputType="number"
            android:maxLength="1"
            android:padding="15dp"
            android:textColor="#3d3d3d"
            android:textColorHint="#3d3d3d" />

        <EditText
            android:id="@+id/et_code2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/edittext_bg"
            android:hint="O"
            android:inputType="number"
            android:maxLength="1"
            android:padding="15dp"
            android:textColor="#3d3d3d"
            android:textColorHint="#3d3d3d" />

        <EditText
            android:id="@+id/et_code3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/edittext_bg"
            android:hint="D"
            android:inputType="number"
            android:maxLength="1"
            android:padding="15dp"
            android:textColor="#3d3d3d"
            android:textColorHint="#3d3d3d" />

        <EditText
            android:id="@+id/et_code4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/edittext_bg"
            android:hint="E"
            android:inputType="number"
            android:maxLength="1"
            android:padding="15dp"
            android:textColor="#3d3d3d"
            android:textColorHint="#3d3d3d" />

    </LinearLayout>

</RelativeLayout>