<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_req"
    android:touchscreenBlocksFocus="false"
    tools:context=".request">

    <RelativeLayout
        android:id="@+id/box2"
        android:layout_width="178dp"
        android:layout_height="23dp"
        android:background="@drawable/style_req"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnback_Request"
            android:layout_width="26dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5sp"
            app:srcCompat="@drawable/backbtn" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/box1"
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:layout_marginEnd="24dp"
        android:background="#f5f6fa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box2">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="106dp"
            android:layout_height="108dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            app:srcCompat="@drawable/folders" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView2"
            android:layout_marginStart="10sp"
            android:fontFamily="@font/lemonbold"
            android:text="Request Fill-Up Form"
            android:textColor="#192a56"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lblinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView9"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/fragmentcore"
            android:text="Please fill-Out the needed information given below for succcessful transaction"
            android:textColor="#2f3640"
            android:textSize="11sp" />

        <View
            android:id="@+id/dvd1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/lblinfo"
            android:layout_marginTop="5dp"
            android:background="#dcdde1" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="552dp"
        android:background="#f5f6fa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box1"
        app:layout_constraintVertical_bias="0.0">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1350dp">

                <RelativeLayout
                    android:layout_width="170dp"
                    android:layout_height="160dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toEndOf="@+id/edt_req_docutype"
                    android:background="@drawable/bg_newmainmenu_reqdoc">


                    <ImageView
                        android:id="@+id/imgCtzn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/imgcccctzn" />

                    <ImageButton
                        android:id="@+id/btnimg_for_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="10dp"
                        android:background="@android:drawable/divider_horizontal_bright"
                        app:srcCompat="@drawable/ic_baseline_edit_24" />


                </RelativeLayout>


                <TextView
                    android:id="@+id/lblfullname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edt_req_otherspurp"
                    android:layout_marginTop="15sp"
                    android:fontFamily="@font/poppinsmedium"
                    android:paddingStart="5sp"
                    android:text="@string/fullname"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edtLname_req"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblfullname"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="55sp"
                    android:backgroundTint="#dcdde1"
                    android:ems="10"
                    android:hint="@string/lastname"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#ff4d4d"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edtFname_req"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edtLname_req"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="55sp"
                    android:backgroundTint="#dcdde1"
                    android:ems="10"
                    android:hint="@string/firstname"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#ff4d4d"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/lblgender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edtMname_req"
                    android:fontFamily="@font/poppinsmedium"
                    android:paddingStart="5sp"
                    android:paddingTop="5dp"
                    android:text="Gender :"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <RadioGroup
                    android:id="@+id/RG_gender_req"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblgender"
                    android:layout_marginStart="15sp"
                    android:layout_marginEnd="55dp"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    tools:layout_editor_absoluteX="196dp"
                    tools:layout_editor_absoluteY="357dp">

                    <RadioButton
                        android:id="@+id/rb_req_male"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:backgroundTint="@color/black"
                        android:buttonTint="#ff9f1a"
                        android:checked="true"
                        android:text="Male"
                        android:textColor="#ff4d4d"
                        android:textSize="12sp" />

                    <RadioButton

                        android:id="@+id/rb_req_fmale"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:buttonTint="#ff9f1a"
                        android:text="Female"
                        android:textColor="#ff4d4d"
                        android:textSize="12sp" />
                </RadioGroup>

                <EditText
                    android:id="@+id/edtMname_req"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edtFname_req"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="55sp"
                    android:backgroundTint="#dcdde1"
                    android:ems="10"
                    android:hint="@string/middlename"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#ff4d4d"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/lbladdress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/RG_gender_req"
                    android:fontFamily="@font/poppinsmedium"
                    android:paddingStart="5sp"
                    android:paddingTop="5dp"
                    android:text="Address :"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edtadd_req"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lbladdress"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="55sp"
                    android:backgroundTint="#dcdde1"
                    android:ems="10"
                    android:hint="House No. / Road / Barangay / City"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#ff4d4d"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/lblresident"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edtadd_req"
                    android:fontFamily="@font/poppinsmedium"
                    android:paddingStart="5sp"
                    android:paddingTop="5dp"
                    android:text="@string/residency"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <RadioGroup
                    android:id="@+id/RG_rsdnt_req"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblresident"
                    android:layout_marginStart="15sp"
                    android:layout_marginEnd="55dp"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    tools:layout_editor_absoluteX="196dp"
                    tools:layout_editor_absoluteY="357dp">

                    <RadioButton
                        android:id="@+id/rb_owned"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:backgroundTint="@color/black"
                        android:buttonTint="#ff9f1a"
                        android:checked="true"
                        android:text="@string/owned"
                        android:textColor="#ff4d4d"
                        android:textSize="12sp" />

                    <RadioButton

                        android:id="@+id/rb_rent"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:buttonTint="#ff9f1a"
                        android:text="@string/rented"
                        android:textColor="#ff4d4d"
                        android:textSize="12sp" />

                    <RadioButton

                        android:id="@+id/rb_living"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:buttonTint="#ff9f1a"
                        android:text="@string/living_with_relatives"
                        android:textColor="#ff4d4d"
                        android:textSize="12sp" />
                </RadioGroup>

                <TextView
                    android:id="@+id/lblnumyrs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/RG_rsdnt_req"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:paddingStart="5sp"
                    android:paddingTop="5dp"
                    android:text="No. Of Years/Months of Residency :"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edtnumyear_req"
                    android:layout_width="40sp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/RG_rsdnt_req"
                    android:layout_marginStart="10sp"
                    android:layout_toEndOf="@+id/lblnumyrs"
                    android:backgroundTint="#dcdde1"
                    android:textAlignment="center"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/lblM_Y"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/RG_rsdnt_req"
                    android:layout_marginTop="7dp"
                    android:layout_toEndOf="@+id/edtnumyear_req"
                    android:background="@drawable/bg_newmainmenu_reqdoc"
                    android:backgroundTint="#dcdde1"
                    android:text="Y"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="10sp"

                    />


                <TextView
                    android:id="@+id/lblcnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblnumyrs"
                    android:layout_marginStart="15sp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:paddingStart="5sp"
                    android:paddingTop="5dp"
                    android:text="Contact Number :"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edtcnum_req"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblnumyrs"
                    android:layout_toEndOf="@+id/lblcnum"
                    android:backgroundTint="#dcdde1"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/lblctzn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblcnum"
                    android:layout_marginStart="15sp"
                    android:layout_marginTop="3sp"
                    android:fontFamily="@font/poppinsmedium"
                    android:paddingStart="5sp"
                    android:paddingTop="5dp"
                    android:text="Citizenship  :"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edt_ctzn_req"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblcnum"
                    android:layout_marginStart="41dp"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@+id/lblctzn"
                    android:backgroundTint="#dcdde1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/lblplacebday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblctzn"
                    android:layout_marginStart="15sp"
                    android:layout_marginTop="3sp"
                    android:fontFamily="@font/poppinsmedium"
                    android:paddingStart="5sp"
                    android:paddingTop="5dp"
                    android:text="Place of Birth  :"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edtplacebday_req"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edt_ctzn_req"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="-8dp"
                    android:layout_toEndOf="@+id/lblplacebday"
                    android:backgroundTint="#dcdde1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/lblbday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edtplacebday_req"
                    android:fontFamily="@font/poppinsmedium"
                    android:paddingStart="5sp"
                    android:paddingTop="5dp"
                    android:text="Birthdate :"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edt_req_bday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblbday"
                    android:layout_marginEnd="55dp"
                    android:backgroundTint="#dcdde1"
                    android:drawableStart="@drawable/ic_baseline_date_range_24"
                    android:editable="false"
                    android:ems="10"
                    android:hint="@string/select_a_date"
                    android:inputType="date"
                    android:paddingStart="10sp"
                    android:textColor="@color/black"
                    android:textColorHint="#ff4d4d"
                    android:textSize="15sp"
                    tools:layout_editor_absoluteX="14dp" />

                <TextView
                    android:id="@+id/lblstats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edt_req_bday"
                    android:fontFamily="@font/poppinsmedium"
                    android:paddingStart="5sp"
                    android:paddingTop="5dp"
                    android:text="Status :"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <RadioGroup
                    android:id="@+id/RGStats_req"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblstats"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="15dp"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    tools:layout_editor_absoluteX="196dp"
                    tools:layout_editor_absoluteY="357dp">

                    <RadioButton
                        android:id="@+id/rbSingle"
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:backgroundTint="@color/black"
                        android:buttonTint="#ff9f1a"
                        android:checked="true"
                        android:text="Single"
                        android:textColor="#ff4d4d"
                        android:textSize="12sp" />

                    <RadioButton

                        android:id="@+id/rbMarried"
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:buttonTint="#ff9f1a"
                        android:text="Married"
                        android:textColor="#ff4d4d"
                        android:textSize="12sp" />

                    <RadioButton

                        android:id="@+id/rbWidow"
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:buttonTint="#ff9f1a"
                        android:text="Widow/er"
                        android:textColor="#ff4d4d"
                        android:textSize="12sp" />

                    <RadioButton

                        android:id="@+id/rbSeparated"
                        android:layout_width="88dp"
                        android:layout_height="match_parent"
                        android:buttonTint="#ff9f1a"
                        android:text="Separated"
                        android:textColor="#ff4d4d"
                        android:textSize="12sp" />
                </RadioGroup>

                <TextView
                    android:id="@+id/lblspouse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/RGStats_req"
                    android:fontFamily="@font/poppinsmedium"
                    android:paddingStart="5sp"
                    android:paddingTop="5dp"
                    android:text="Name of Spouse :"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/lblnote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/RGStats_req"
                    android:layout_toEndOf="@+id/lblspouse"
                    android:fontFamily="sans-serif"
                    android:paddingStart="5sp"
                    android:paddingTop="10dp"
                    android:text="(Please input N/A if not applicable)"
                    android:textColor="#192a56"
                    android:textSize="10sp" />

                <EditText
                    android:id="@+id/edtspouse_req"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblspouse"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="55sp"
                    android:backgroundTint="#dcdde1"
                    android:ems="10"
                    android:hint="Spouse's Fullname"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#ff4d4d"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/lblnote2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edtspouse_req"
                    android:layout_toEndOf="@+id/lblchild"
                    android:fontFamily="sans-serif"
                    android:paddingStart="5sp"
                    android:paddingTop="10dp"
                    android:text="(Please input N/A if not applicable)"
                    android:textColor="#192a56"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/lblchild"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edtspouse_req"
                    android:fontFamily="@font/poppinsmedium"
                    android:paddingStart="5sp"
                    android:paddingTop="5dp"
                    android:text="Name of Children :"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edtchild_req"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblchild"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="55sp"
                    android:backgroundTint="#dcdde1"
                    android:ems="10"
                    android:hint="Children's Fullname"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#ff4d4d"
                    android:textSize="15sp" />

                <View
                    android:id="@+id/dvd2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/edtchild_req"
                    android:layout_marginTop="5dp"
                    android:background="#dcdde1" />

                <TextView
                    android:id="@+id/lbltypedocu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Type Of Document: "
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edt_req_docutype"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lbltypedocu"
                    android:layout_marginStart="10sp"
                    android:background="@drawable/bg_newmainmenu_reqdoc"
                    android:ems="10"
                    android:enabled="false"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:paddingTop="15sp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="15sp"
                    android:text="Name"
                    android:textAlignment="center"
                    android:textColor="#2D3436"
                    android:textSize="13sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/lblpurpose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edt_req_docutype"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Purpose : "
                    android:textColor="@color/black"
                    android:textSize="15sp" />


                <Spinner
                    android:id="@+id/REQ_cmbpurpose"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblpurpose"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/bg_newmainmenu_reqdoc"
                    android:entries="@array/purpose"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp" />

                <EditText
                    android:id="@+id/edt_req_otherspurp"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/REQ_cmbpurpose"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bot_newmain_brdr"
                    android:ems="10"
                    android:hint="Others: Please Specify..."
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:paddingTop="15sp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="5sp"
                    android:textColor="#2D3436"
                    android:textColorHint="#ff4d4d"
                    android:textSize="13sp"
                    android:visibility="invisible" />

