<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f6fa"
    tools:context=".New_MainMenu" >

    <RelativeLayout
        android:id="@+id/headeremergency"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:background="@drawable/header_mainmenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/IV_newmain_profile"
            android:layout_width="47dp"
            android:layout_height="43dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="11dp"
            app:srcCompat="@drawable/ic_baseline_account_circle_24" />

        <TextView
            android:id="@+id/tv_sUppp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="14dp"
            android:fontFamily="serif-monospace"
            android:text="@string/home"
            android:textColor="#2c3e50"
            android:textSize="35sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_newmainmenu_reqdoc"
        android:paddingStart="10sp"
        android:paddingTop="20sp"
        android:paddingEnd="10sp"
        android:paddingBottom="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headeremergency">


        <Button
            android:id="@+id/btn_clearance"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="@drawable/req_btn"
            android:elegantTextHeight="true"
            android:elevation="30dp"

            android:fontFamily="sans-serif"
            android:shadowColor="#d35400"
            android:text="Barangay Clearance"
            android:textColor="#2D3436" />

        <Button
            android:id="@+id/btn_residency"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_clearance"
            android:layout_marginTop="10sp"
            android:background="@drawable/req_btn"
            android:elegantTextHeight="true"
            android:elevation="30dp"
            android:fontFamily="sans-serif"
            android:shadowColor="#d35400"
            android:text="Barangay\nResidency"
            android:textColor="#2c3e50" />

        <Button
            android:id="@+id/btn_indigency"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10sp"
            android:background="@drawable/req_btn"
            android:elegantTextHeight="true"
            android:elevation="30dp"
            android:fontFamily="sans-serif"
            android:shadowColor="#d35400"
            android:text="Barangay  Indigency"
            android:textColor="#2c3e50" />

        <Button
            android:id="@+id/btn_ID"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_indigency"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10sp"
            android:background="@drawable/req_btn"
            android:elegantTextHeight="true"
            android:elevation="30dp"
            android:fontFamily="sans-serif"
            android:shadowColor="#d35400"
            android:text="Barangay ID"
            android:textColor="#2c3e50" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:background="#f5f6fa"
        android:fontFamily="serif-monospace"
        android:text="Request for Document"
        android:textColor="#2D3436"
        android:textSize="27sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headeremergency" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/main_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/all_rights_reserve_2022"
            android:textColor="#7efff5"
            android:textSize="15sp" />


    </RelativeLayout>


    <RelativeLayout

        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_newmainmenu_reqdoc"
        android:paddingStart="10sp"
        android:paddingTop="20sp"
        android:paddingEnd="10sp"
        android:paddingBottom="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider11">

        <Button
            android:id="@+id/btn_stat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/req_btn"
            android:elegantTextHeight="true"
            android:elevation="30dp"
            android:shadowColor="#d35400"
            android:text="Transaction Status"
            android:textColor="#2c3e50" />

        <Button
            android:id="@+id/btn_transact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_stat"
            android:layout_marginTop="32dp"
            android:background="@drawable/req_btn"
            android:elegantTextHeight="true"
            android:elevation="30dp"
            android:shadowColor="#d35400"
            android:text="Transaction History"
            android:textColor="#2c3e50" />

    </RelativeLayout>

    <View
        android:id="@+id/divider11"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="1dp"
        android:background="#d2dae2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#f5f6fa"
        android:text="OR"
        android:textColor="#808e9b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/bot_newmain_brdr"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/brgylogob" />

</androidx.constraintlayout.widget.ConstraintLayout>