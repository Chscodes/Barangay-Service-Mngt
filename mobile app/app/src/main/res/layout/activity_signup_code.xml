<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup_code"
    android:background="#f1f2f6">


    <RelativeLayout
        android:id="@+id/header_resetpass"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/header_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/IV_code"
            android:layout_width="91dp"
            android:layout_height="82dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="64dp"
            app:srcCompat="@drawable/signup" />

        <Button
            android:id="@+id/btn_code_cancel"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_round_cancel"
            android:text="@string/x__" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/boldgogh"
            android:text="OTP CODE"
            android:textColor="@color/white"
            android:textSize="25sp" />


    </RelativeLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-black"
        android:text="User Verification"
        android:textColor="#2c3e50"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_resetpass" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:text="Enter your One Time Password sent to your email below:"
        android:textColor="#2c3e50"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />


    <TextView
        android:id="@+id/tv_code_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="thisemail23@gmail.com"
        android:textColor="#2c3e50"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <RelativeLayout
        android:id="@+id/RL_signCode_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sign_rsnd">

        <TextView
            android:id="@+id/lbl_rs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Resend code will be enable in:"
            android:textColor="#2c3e50"
            android:visibility="gone"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lbl_sec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/lbl_rs"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="0"
            android:visibility="gone"
            android:textColor="#2c3e50"
            android:textSize="15sp" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_code_email">


        <EditText
            android:id="@+id/edt_code_code1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/edittext_bg"
            android:hint="C"
            android:inputType="number"
            android:maxLength="1"
            android:padding="15dp"
            android:textColor="#3d3d3d"
            android:textColorHint="#3d3d3d" />

        <EditText
            android:id="@+id/edt_code_code2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/edittext_bg"
            android:hint="O"
            android:inputType="number"
            android:maxLength="1"
            android:padding="15dp"
            android:textColor="#3d3d3d"
            android:textColorHint="#3d3d3d" />

        <EditText
            android:id="@+id/edt_code_code3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/edittext_bg"
            android:hint="D"
            android:inputType="number"
            android:maxLength="1"
            android:padding="15dp"
            android:textColor="#3d3d3d"
            android:textColorHint="#3d3d3d" />

        <EditText
            android:id="@+id/edt_code_code4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/edittext_bg"
            android:hint="E"
            android:inputType="number"
            android:maxLength="1"
            android:padding="15dp"
            android:textColor="#3d3d3d"
            android:textColorHint="#3d3d3d" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_code_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_bg"
        android:text="Confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/sign_code_pb"
        style="?android:attr/progressBarStyle"
        android:layout_width="27dp"
        android:layout_height="20dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/btn_sign_rsnd"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="#00000000"
        android:drawableStart="@drawable/resend"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Resend Code"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_code_pb" />


</androidx.constraintlayout.widget.ConstraintLayout>