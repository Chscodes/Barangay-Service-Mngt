<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <corners android:radius="150dp"/>
            <gradient android:angle="100" android:startColor="#ff3838" android:centerColor="#ff4d4d"  android:endColor="#ffaf40"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <corners android:radius="150dp"/>
            <gradient android:angle="270" android:startColor="#ffaf40" android:centerColor="#ff4d4d"  android:endColor="#ff3838"/>
        </shape>
    </item>
</selector>