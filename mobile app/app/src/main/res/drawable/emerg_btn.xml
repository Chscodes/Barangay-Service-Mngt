<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <corners android:radius="111dp"/>
            <gradient android:angle="1"
                android:startColor="#cc0000"
                android:centerColor="#f78fb3"
                android:endColor="#ff3838"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <corners android:radius="111dp"/>
            <gradient android:angle="270"
                android:startColor="#f8a5c2"
                android:centerColor="#ee5253"
                android:endColor="#cc0000"/>
        </shape>
    </item>
</selector>