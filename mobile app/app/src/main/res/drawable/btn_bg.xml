<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <corners android:radius="15dp"/>
            <gradient android:angle="270" android:startColor="#ff9f1a" android:centerColor="#ff9f1a"  android:endColor="#ffd32a"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <corners android:radius="15dp"/>
            <gradient android:angle="270" android:startColor="#ffd32a" android:centerColor="#ff9f1a"  android:endColor="#ff9f1a"/>
        </shape>
    </item>
</selector>