<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="false">
    <shape>
        <corners android:radius="111dp"/>
        <gradient android:angle="1" android:startColor="#3B3B98" android:centerColor="#1B9CFC"  android:endColor="#7d5fff"/>
    </shape>
</item>

<item android:state_pressed="true">
    <shape>
        <corners android:radius="111dp"/>
        <gradient android:angle="270" android:startColor="#1B9CFC" android:centerColor="#3B3B98"  android:endColor="#7d5fff"/>
    </shape>
</item>
</selector>